{
  "name": "citaya-worker",
  "version": "1.0.0",
  "description": "Background workers para CitaYa - Node.js + Bull + TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
