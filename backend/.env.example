# Server Configuration
NODE_ENV=development
API_PORT=4000

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=citaya_dev
DB_USER=citaya_user
DB_PASSWORD=citaya_password_dev

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=http://localhost:3000
# Opcional: múltiples orígenes separados por coma
# FRONTEND_URLS=http://localhost:3000,http://localhost:3001

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@citaya.com

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# reCAPTCHA v3
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Logging
LOG_LEVEL=info

# Encryption (for sensitive documents)
ENCRYPTION_KEY=your_32_byte_encryption_key

# Verification documents (HU7)
UPLOADS_PATH=/var/www/citaya/storage/uploads
MAX_FILE_SIZE_MB=10
PUBLIC_API_URL=http://localhost:4000
VERIFICATION_SIGNED_URL_SECRET=your_verification_signed_url_secret
VERIFICATION_SIGNED_URL_TTL_SECONDS=600
MALWARE_SCAN_STRICT=false
