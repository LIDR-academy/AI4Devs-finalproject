# Personal Finance Tracker API - Environment Variables
# Copy this file to .env and update the values as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name
APP_NAME="Personal Finance Tracker API"

# Debug mode - set to true for development, false for production
DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# API SETTINGS
# =============================================================================

# API version 1 prefix for all endpoints
API_V1_PREFIX="/api/v1"

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# Host address for the server (0.0.0.0 for all interfaces)
HOST=0.0.0.0

# Port number for the server
PORT=8000

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Allowed CORS origins (comma-separated list)
# Use "*" for development, specify exact origins for production
# Example: "http://localhost:3000,https://yourdomain.com"
CORS_ORIGINS="*"

# Allow credentials in CORS requests
CORS_ALLOW_CREDENTIALS=true

# Allowed HTTP methods for CORS (comma-separated list)
# Use "*" for all methods
CORS_ALLOW_METHODS="*"

# Allowed headers for CORS (comma-separated list)
# Use "*" for all headers
CORS_ALLOW_HEADERS="*"

