{
  "openapi": "3.0.0",
  "info": {
    "title": "Buscadoc API",
    "version": "1.0.0",
    "description": "API para búsqueda de especialistas médicos por especialidad y ubicación"
  },
  "paths": {
    "/api/auth/register/patient": {
      "post": {
        "tags": ["Auth"],
        "summary": "Registro de paciente",
        "description": "Permite registrar un nuevo paciente. Valida los campos requeridos, almacena la contraseña como hash y crea las entidades USER y PATIENT.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": { "type": "string", "example": "Ana" },
                  "email": { "type": "string", "format": "email", "example": "ana.garcia@example.com" },
                  "password": { "type": "string", "example": "StrongPass1!" },
                  "confirmPassword": { "type": "string", "example": "StrongPass1!" },
                  "lastName": { "type": "string", "example": "García" },
                  "phone": { "type": "string", "example": "5551234567" }
                },
                "required": ["firstName", "email", "password", "confirmPassword"]
              },
              "examples": {
                "registroPaciente": {
                  "summary": "Ejemplo de registro de paciente",
                  "value": {
                    "firstName": "Ana",
                    "email": "ana.garcia@example.com",
                    "password": "StrongPass1!",
                    "confirmPassword": "StrongPass1!",
                    "lastName": "García",
                    "phone": "5551234567"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Paciente registrado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "integer", "example": 201 },
                    "message": { "type": "string", "example": "Patient registered successfully" },
                    "payload": {
                      "type": "object",
                      "properties": {
                        "firstName": { "type": "string", "example": "Ana" },
                        "email": { "type": "string", "example": "ana.garcia@example.com" }
                      }
                    }
                  }
                },
                "examples": {
                  "success": {
                    "summary": "Registro exitoso",
                    "value": {
                      "code": 201,
                      "message": "Patient registered successfully",
                      "payload": {
                        "firstName": "Ana",
                        "email": "ana.garcia@example.com"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error de validación o email duplicado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "integer", "example": 400 },
                    "message": { "type": "string", "example": "Validation error" },
                    "payload": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "array",
                          "items": { "type": "string" }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "emailDuplicado": {
                    "summary": "Email ya registrado",
                    "value": {
                      "code": 400,
                      "message": "Patient already exists",
                      "payload": {
                        "error": ["Patient already exists"]
                      }
                    }
                  },
                  "validacion": {
                    "summary": "Error de validación",
                    "value": {
                      "code": 400,
                      "message": "Validation error",
                      "payload": {
                        "error": [
                          "Password too weak",
                          "Passwords do not match"
                        ]
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "integer", "example": 500 },
                    "message": { "type": "string", "example": "Internal server error" },
                    "payload": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "array",
                          "items": { "type": "string" }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "errorInterno": {
                    "summary": "Error inesperado",
                    "value": {
                      "code": 500,
                      "message": "Internal server error",
                      "payload": {
                        "error": ["An unexpected error occurred. Please try again later."]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/register/doctor": {
      "post": {
        "tags": ["Auth"],
        "summary": "Registro de médico especialista",
        "description": "Permite registrar un nuevo médico especialista. Valida los campos requeridos, almacena la contraseña como hash y crea las entidades USER y DOCTOR.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": { "type": "string", "example": "Luis" },
                  "lastName": { "type": "string", "example": "Pérez" },
                  "email": { "type": "string", "format": "email", "example": "luis.perez@example.com" },
                  "password": { "type": "string", "example": "StrongPass2!" },
                  "confirmPassword": { "type": "string", "example": "StrongPass2!" },
                  "licenseNumber": { "type": "string", "example": "MED1234567" },
                  "phone": { "type": "string", "example": "5559876543" }
                },
                "required": [
                  "firstName",
                  "lastName",
                  "email",
                  "password",
                  "confirmPassword",
                  "licenseNumber",
                  "phone"
                ]
              },
              "examples": {
                "registroMedico": {
                  "summary": "Ejemplo de registro de médico especialista",
                  "value": {
                    "firstName": "Luis",
                    "lastName": "Pérez",
                    "email": "luis.perez@example.com",
                    "password": "StrongPass2!",
                    "confirmPassword": "StrongPass2!",
                    "licenseNumber": "MED1234567",
                    "phone": "5559876543"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Médico registrado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "integer", "example": 201 },
                    "message": { "type": "string", "example": "Doctor registered successfully" },
                    "payload": {
                      "type": "object",
                      "properties": {
                        "firstName": { "type": "string", "example": "Luis" },
                        "email": { "type": "string", "example": "luis.perez@example.com" }
                      }
                    }
                  }
                },
                "examples": {
                  "success": {
                    "summary": "Registro exitoso",
                    "value": {
                      "code": 201,
                      "message": "Doctor registered successfully",
                      "payload": {
                        "firstName": "Luis",
                        "email": "luis.perez@example.com"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error de validación, email o license_number duplicado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "integer", "example": 400 },
                    "message": { "type": "string", "example": "Validation error" },
                    "payload": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "array",
                          "items": { "type": "string" }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "emailDuplicado": {
                    "summary": "Email ya registrado",
                    "value": {
                      "code": 400,
                      "message": "Doctor already exists",
                      "payload": {
                        "error": ["Doctor already exists"]
                      }
                    }
                  },
                  "licenseDuplicado": {
                    "summary": "License number ya registrado",
                    "value": {
                      "code": 400,
                      "message": "Doctor already exists",
                      "payload": {
                        "error": ["Doctor already exists"]
                      }
                    }
                  },
                  "validacion": {
                    "summary": "Error de validación",
                    "value": {
                      "code": 400,
                      "message": "Validation error",
                      "payload": {
                        "error": [
                          "Password too weak",
                          "Passwords do not match",
                          "License number required"
                        ]
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "integer", "example": 500 },
                    "message": { "type": "string", "example": "Internal server error" },
                    "payload": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "array",
                          "items": { "type": "string" }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "errorInterno": {
                    "summary": "Error inesperado",
                    "value": {
                      "code": 500,
                      "message": "Internal server error",
                      "payload": {
                        "error": ["An unexpected error occurred. Please try again later."]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/doctors/search": {
      "get": {
        "tags": [
          "Doctors"
        ],
        "summary": "Buscar especialistas por especialidad y ubicación",
        "description": "Permite buscar especialistas médicos filtrando por especialidad, ciudad y estado. Accesible sin autenticación.",
        "parameters": [
          {
            "name": "specialty_id",
            "in": "query",
            "description": "ID de la especialidad",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "city_id",
            "in": "query",
            "description": "ID de la ciudad",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "state_id",
            "in": "query",
            "description": "ID del estado",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Número de página (por defecto 1)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Resultados por página (por defecto 10)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de especialistas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "success"
                    },
                    "payload": {
                      "type": "object",
                      "properties": {
                        "results": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "integer"
                              },
                              "name": {
                                "type": "string"
                              },
                              "specialty": {
                                "type": "string"
                              },
                              "city": {
                                "type": "string"
                              },
                              "state": {
                                "type": "string"
                              },
                              "photo": {
                                "type": "string"
                              },
                              "biography": {
                                "type": "string"
                              }
                            }
                          }
                        },
                        "pagination": {
                          "type": "object",
                          "properties": {
                            "total": {
                              "type": "integer"
                            },
                            "page": {
                              "type": "integer"
                            },
                            "limit": {
                              "type": "integer"
                            },
                            "totalPages": {
                              "type": "integer"
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "success": {
                    "summary": "Respuesta exitosa",
                    "value": {
                      "code": 200,
                      "message": "success",
                      "payload": {
                        "results": [
                          {
                            "id": 4,
                            "name": "Dr. Juan Pérez",
                            "specialty": "Cardiología, Dermatología",
                            "city": "Coyoacán",
                            "state": "Ciudad de México",
                            "photo": "",
                            "biography": "Cardiólogo con 10 años de experiencia."
                          }
                        ],
                        "pagination": {
                          "total": 1,
                          "page": 1,
                          "limit": 5,
                          "totalPages": 1
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error de validación de parámetros",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 400
                    },
                    "message": {
                      "type": "string",
                      "example": "Bad Request"
                    },
                    "payload": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "validationError": {
                    "summary": "Error de validación",
                    "value": {
                      "code": 400,
                      "message": "Bad Request",
                      "payload": {
                        "error": [
                          "limit must be a positive number"
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/doctors/{id}": {
      "get": {
        "tags": [
          "Doctors"
        ],
        "summary": "Consultar perfil profesional y ubicación de un especialista.",
        "description": "Obtiene el perfil profesional y ubicación general de un especialista por su ID. Oculta datos personales sensibles para usuarios no autenticados.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID del especialista",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Perfil profesional y ubicación del especialista",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "success"
                    },
                    "payload": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "name": {
                          "type": "string"
                        },
                        "specialty": {
                          "type": "string"
                        },
                        "biography": {
                          "type": "string"
                        },
                        "photo": {
                          "type": "string"
                        },
                        "licenseNumber": {
                          "type": "string"
                        },
                        "title": {
                          "type": "string"
                        },
                        "city": {
                          "type": "string"
                        },
                        "state": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "success": {
                    "summary": "Respuesta exitosa",
                    "value": {
                      "code": 200,
                      "message": "success",
                      "payload": {
                        "id": 4,
                        "name": "Dr. Juan Pérez",
                        "specialty": "Cardiología",
                        "biography": "Cardiólogo con 10 años de experiencia.",
                        "photo": "",
                        "licenseNumber": "MED12345",
                        "title": "Cardiología",
                        "city": "Coyoacán",
                        "state": "Ciudad de México"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error de validación de parámetros",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 400
                    },
                    "message": {
                      "type": "string",
                      "example": "Bad Request"
                    },
                    "payload": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "validationError": {
                    "summary": "Error de validación",
                    "value": {
                      "code": 400,
                      "message": "Bad Request",
                      "payload": {
                        "error": [
                          "Doctor id is required"
                        ]
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Especialista no encontrado o inactivo",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 404
                    },
                    "message": {
                      "type": "string",
                      "example": "Doctor not found"
                    },
                    "payload": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "notFound": {
                    "summary": "Especialista no encontrado",
                    "value": {
                      "code": 404,
                      "message": "Doctor not found",
                      "payload": {
                        "error": [
                          "Doctor with specified ID does not exist"
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {}
}