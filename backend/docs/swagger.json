{
  "openapi": "3.0.0",
  "info": {
    "title": "Buscadoc API",
    "version": "1.0.0",
    "description": "API para búsqueda de especialistas médicos por especialidad y ubicación"
  },
  "paths": {
    "/api/doctors/search": {
      "get": {
        "tags": [
          "Doctors"
        ],
        "summary": "Buscar especialistas por especialidad y ubicación",
        "description": "Permite buscar especialistas médicos filtrando por especialidad, ciudad y estado. Accesible sin autenticación.",
        "parameters": [
          {
            "name": "specialty_id",
            "in": "query",
            "description": "ID de la especialidad",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "city_id",
            "in": "query",
            "description": "ID de la ciudad",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "state_id",
            "in": "query",
            "description": "ID del estado",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Número de página (por defecto 1)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Resultados por página (por defecto 10)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de especialistas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "success"
                    },
                    "payload": {
                      "type": "object",
                      "properties": {
                        "results": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "integer"
                              },
                              "name": {
                                "type": "string"
                              },
                              "specialty": {
                                "type": "string"
                              },
                              "city": {
                                "type": "string"
                              },
                              "state": {
                                "type": "string"
                              },
                              "photo": {
                                "type": "string"
                              },
                              "biography": {
                                "type": "string"
                              }
                            }
                          }
                        },
                        "pagination": {
                          "type": "object",
                          "properties": {
                            "total": {
                              "type": "integer"
                            },
                            "page": {
                              "type": "integer"
                            },
                            "limit": {
                              "type": "integer"
                            },
                            "totalPages": {
                              "type": "integer"
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "success": {
                    "summary": "Respuesta exitosa",
                    "value": {
                      "code": 200,
                      "message": "success",
                      "payload": {
                        "results": [
                          {
                            "id": 4,
                            "name": "Dr. Juan Pérez",
                            "specialty": "Cardiología, Dermatología",
                            "city": "Coyoacán",
                            "state": "Ciudad de México",
                            "photo": "",
                            "biography": "Cardiólogo con 10 años de experiencia."
                          }
                        ],
                        "pagination": {
                          "total": 1,
                          "page": 1,
                          "limit": 5,
                          "totalPages": 1
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error de validación de parámetros",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 400
                    },
                    "message": {
                      "type": "string",
                      "example": "Bad Request"
                    },
                    "payload": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "validationError": {
                    "summary": "Error de validación",
                    "value": {
                      "code": 400,
                      "message": "Bad Request",
                      "payload": {
                        "error": [
                          "limit must be a positive number"
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/doctors/{id}": {
      "get": {
        "tags": [
          "Doctors"
        ],
        "summary": "Consultar perfil profesional y ubicación de un especialista.",
        "description": "Obtiene el perfil profesional y ubicación general de un especialista por su ID. Oculta datos personales sensibles para usuarios no autenticados.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID del especialista",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Perfil profesional y ubicación del especialista",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "success"
                    },
                    "payload": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "name": {
                          "type": "string"
                        },
                        "specialty": {
                          "type": "string"
                        },
                        "biography": {
                          "type": "string"
                        },
                        "photo": {
                          "type": "string"
                        },
                        "licenseNumber": {
                          "type": "string"
                        },
                        "title": {
                          "type": "string"
                        },
                        "city": {
                          "type": "string"
                        },
                        "state": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "success": {
                    "summary": "Respuesta exitosa",
                    "value": {
                      "code": 200,
                      "message": "success",
                      "payload": {
                        "id": 4,
                        "name": "Dr. Juan Pérez",
                        "specialty": "Cardiología",
                        "biography": "Cardiólogo con 10 años de experiencia.",
                        "photo": "",
                        "licenseNumber": "MED12345",
                        "title": "Cardiología",
                        "city": "Coyoacán",
                        "state": "Ciudad de México"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error de validación de parámetros",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 400
                    },
                    "message": {
                      "type": "string",
                      "example": "Bad Request"
                    },
                    "payload": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "validationError": {
                    "summary": "Error de validación",
                    "value": {
                      "code": 400,
                      "message": "Bad Request",
                      "payload": {
                        "error": [
                          "Doctor id is required"
                        ]
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Especialista no encontrado o inactivo",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 404
                    },
                    "message": {
                      "type": "string",
                      "example": "Doctor not found"
                    },
                    "payload": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "notFound": {
                    "summary": "Especialista no encontrado",
                    "value": {
                      "code": 404,
                      "message": "Doctor not found",
                      "payload": {
                        "error": [
                          "Doctor with specified ID does not exist"
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {}
}