source "https://rubygems.org"
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

ruby ">= 3.2.0"

# Bundle edge Rails instead: gem "rails", github: "rails/rails", branch: "main"
gem "rails", "~> 7.1.0"

# The original asset pipeline for Rails [https://github.com/rails/sprockets-rails]
gem "sprockets-rails"

# Use postgresql as the database for Active Record (production)
gem "pg", "~> 1.5", group: :production

# Use the Puma web server [https://github.com/puma/puma]
gem "puma", "~> 6.4"

# Use JavaScript with ESM import maps [https://github.com/rails/importmap-rails]
gem "importmap-rails"

# Hotwire's SPA-like page accelerator [https://turbo.hotwired.dev]
gem "turbo-rails"

# Hotwire's modest JavaScript framework [https://stimulus.hotwired.dev]
gem "stimulus-rails"

# Build JSON APIs with ease [https://github.com/rails/jbuilder]
gem "jbuilder"

# Pin connection_pool to 2.x FIRST for Rails 7.1 compatibility
# connection_pool 3.x breaks redis_cache_store with ArgumentError
# This must be specified before redis to ensure redis-client uses the correct version
gem "connection_pool", "~> 2.4", "< 3.0"

# Use Redis adapter to run Action Cable in production
gem "redis", "~> 5.0"

# Pagination
gem "kaminari", "~> 1.2"

# Use Kredis to get higher-level data types in Redis [https://github.com/rails/kredis]
# gem "kredis"

# Use Active Model has_secure_password [https://guides.rubyonrails.org/active_model_basics.html#securepassword]
# gem "bcrypt", "~> 3.1.7"

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem "tzinfo-data", platforms: %i[ mingw mswin x64_mingw jruby ]

# Reduces boot times through caching; required in config/boot.rb
gem "bootsnap", require: false

# Use Active Storage variants [https://guides.rubyonrails.org/active_storage_overview.html#transforming-images]
# gem "image_processing", "~> 1.2"

# Authentication solution for Rails
gem "devise", "~> 4.9"

# Authorization solution for Rails
gem "pundit", "~> 2.3"

# For rate limiting (security)
gem "rack-attack", "~> 6.7"

group :development, :test do
  # Use sqlite3 as the database for Active Record (development/test only)
  gem "sqlite3", "~> 1.4"
  
  # See https://guides.rubyonrails.org/debugging_rails_applications.html#debugging-with-the-debug-gem
  gem "debug", platforms: %i[ mri mingw x64_mingw ]
  
  # RSpec for testing
  gem "rspec-rails", "~> 6.1"
  
  # Factory Bot for test data
  gem "factory_bot_rails", "~> 6.4"
  
  # Faker for generating fake data
  gem "faker", "~> 3.2"
  
  # Testing & Code Quality
  gem "rubocop", "~> 1.57", require: false
  gem "rubocop-rails", "~> 2.23", require: false
  gem "rubocop-rspec", "~> 2.24", require: false
  gem "erb_lint", "~> 0.4", require: false
  gem "simplecov", "~> 0.22", require: false
  gem "rspec_junit_formatter", "~> 0.6", require: false
  
  # Security Scanning
  gem "brakeman", "~> 6.1", require: false
  gem "bundler-audit", "~> 0.9", require: false
  # Note: bundler-leak removed - not compatible with Bundler 4.x
  # If needed, install manually: gem install bundler-leak (requires Bundler < 3)
end

group :development do
  # Use console on exceptions pages [https://github.com/rails/web-console]
  gem "web-console"

  # Add speed badges [https://github.com/MiniProfiler/rack-mini-profiler]
  # gem "rack-mini-profiler"

  # Speed up commands on slow machines / big apps [https://github.com/rails/spring]
  # gem "spring"

  # Letter opener for viewing emails in development
  gem "letter_opener", "~> 1.8"
end

group :test do
  # Use system testing [https://guides.rubyonrails.org/testing.html#system-testing]
  gem "capybara"
  gem "selenium-webdriver"
  
  # Shoulda matchers for cleaner tests
  gem "shoulda-matchers", "~> 6.0"
  
  # Pundit matchers for policy testing
  gem "pundit-matchers", "~> 3.1"
  
  # Database cleaner
  gem "database_cleaner-active_record", "~> 2.1"
end

# Logging
gem "lograge", "~> 0.13"

# Production Monitoring (free tier)
group :production do
  gem "rollbar", "~> 3.4"  # Error tracking (5,000 events/month free)
end
