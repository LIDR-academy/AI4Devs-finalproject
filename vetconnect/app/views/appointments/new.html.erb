<div class="px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-8 animate-fade-in">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">Agendar Nueva Cita üìÖ</h1>
      <p class="mt-2 text-sm text-gray-600">Programa una consulta veterinaria para tu mascota</p>
    </div>

    <!-- Form -->
    <%= form_with(model: @appointment, class: "animate-fade-in") do |f| %>
      <!-- Errors -->
      <% if @appointment.errors.any? %>
        <div class="mb-6 rounded-lg bg-red-50 p-4 border-l-4 border-red-400">
          <div class="flex">
            <div class="flex-shrink-0">
              <span class="text-2xl">‚ö†Ô∏è</span>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@appointment.errors.count, "error") %> impidieron crear la cita:
              </h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <% @appointment.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Form Card -->
      <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl overflow-hidden">
        <div class="px-6 py-8 sm:p-10">
          <div class="grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-6">
            
            <!-- Pet -->
            <div class="sm:col-span-3">
              <%= f.label :pet_id, "Mascota *", class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= f.collection_select :pet_id, @pets, :id, :name,
                    { prompt: "üêæ Seleccionar mascota..." },
                    class: "block w-full rounded-lg border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6",
                    required: true %>
              </div>
            </div>

            <!-- Veterinarian -->
            <div class="sm:col-span-3">
              <%= f.label :veterinarian_id, "Veterinario *", class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= f.collection_select :veterinarian_id, @veterinarians, :id, :full_name,
                    { prompt: "üë®‚Äç‚öïÔ∏è Seleccionar veterinario..." },
                    class: "block w-full rounded-lg border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6",
                    required: true %>
              </div>
            </div>

            <!-- Clinic -->
            <div class="sm:col-span-3">
              <%= f.label :clinic_id, "Cl√≠nica *", class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= f.collection_select :clinic_id, @clinics, :id, :name,
                    { prompt: "üè• Seleccionar cl√≠nica..." },
                    class: "block w-full rounded-lg border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6",
                    required: true %>
              </div>
            </div>

            <!-- Appointment Type -->
            <div class="sm:col-span-3">
              <%= f.label :appointment_type, "Tipo de Cita *", class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= f.select :appointment_type,
                    options_for_select([
                      ['üíâ Vacunaci√≥n', 'vaccination'],
                      ['ü©∫ Consulta General', 'consultation'],
                      ['üî¨ Chequeo Preventivo', 'checkup'],
                      ['üè• Cirug√≠a', 'surgery'],
                      ['üö® Emergencia', 'emergency']
                    ]),
                    { prompt: "Seleccionar tipo..." },
                    class: "block w-full rounded-lg border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6",
                    required: true %>
              </div>
            </div>

            <!-- Date and Time -->
            <div class="sm:col-span-3">
              <%= f.label :appointment_date, "Fecha y Hora *", class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= f.datetime_field :appointment_date,
                    class: "block w-full rounded-lg border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6",
                    required: true,
                    min: DateTime.now.strftime('%Y-%m-%dT%H:%M') %>
              </div>
              <p class="mt-1 text-xs text-gray-500">Verifica los horarios de la cl√≠nica seleccionada</p>
            </div>

            <!-- Duration -->
            <div class="sm:col-span-3">
              <%= f.label :duration_minutes, "Duraci√≥n *", class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= f.select :duration_minutes,
                    options_for_select([
                      ['15 minutos', 15],
                      ['30 minutos', 30],
                      ['45 minutos', 45],
                      ['1 hora', 60],
                      ['1.5 horas', 90],
                      ['2 horas', 120]
                    ], 30),
                    {},
                    class: "block w-full rounded-lg border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6",
                    required: true %>
              </div>
            </div>

            <!-- Reason -->
            <div class="sm:col-span-6">
              <%= f.label :reason, "Motivo de la Consulta *", class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= f.text_field :reason,
                    class: "block w-full rounded-lg border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6",
                    placeholder: "Ej: Chequeo anual, vacuna antirr√°bica, s√≠ntomas de...",
                    required: true,
                    maxlength: 200 %>
              </div>
            </div>

            <!-- Notes -->
            <div class="sm:col-span-6">
              <%= f.label :notes, "Notas Adicionales", class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= f.text_area :notes,
                    rows: 3,
                    class: "block w-full rounded-lg border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6",
                    placeholder: "Informaci√≥n adicional que el veterinario deba conocer (opcional)..." %>
              </div>
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="flex items-center justify-end gap-x-3 border-t border-gray-900/10 px-6 py-4 bg-gray-50">
          <%= link_to "Cancelar", appointments_path,
              class: "rounded-lg px-4 py-2.5 text-sm font-semibold text-gray-900 hover:bg-gray-100 transition-colors" %>
          <%= f.submit "Agendar Cita",
              class: "rounded-lg gradient-bg px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:opacity-90 transition-opacity cursor-pointer" %>
        </div>
      </div>
    <% end %>

    <!-- Help Card -->
    <div class="mt-8 rounded-lg bg-blue-50 p-6 shadow-sm ring-1 ring-blue-100">
      <div class="flex">
        <span class="text-2xl mr-3">üí°</span>
        <div>
          <h3 class="text-sm font-semibold text-blue-900">Consejos para Agendar</h3>
          <ul class="mt-2 text-sm text-blue-700 list-disc list-inside space-y-1">
            <li>Revisa los horarios de atenci√≥n de la cl√≠nica antes de seleccionar una fecha</li>
            <li>Llega 10 minutos antes de tu cita para completar cualquier papeleo</li>
            <li>Si tienes resultados previos de an√°lisis, tr√°elos contigo</li>
            <li>Recibir√°s un correo de confirmaci√≥n con los detalles de tu cita</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
