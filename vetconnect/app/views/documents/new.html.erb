<div class="px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <!-- Header -->
    <div class="animate-fade-in">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">Subir Documento üìÑ</h1>
      <p class="mt-2 text-sm text-gray-600">
        <% if @pet %>
          Agrega un documento para <%= @pet.name %>
        <% else %>
          Agrega un nuevo documento
        <% end %>
      </p>
    </div>

    <!-- Form -->
    <div class="mt-8 bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl overflow-hidden">
      <div class="px-6 py-5 border-b border-gray-200 bg-gray-50">
        <h2 class="text-lg font-semibold text-gray-900">Informaci√≥n del Documento</h2>
      </div>
      <div class="px-6 py-6">
        <%= render 'form', document: @document, pet: @pet %>
      </div>
    </div>

    <!-- Back Link -->
    <% if @pet %>
      <div class="mt-6">
        <%= link_to pet_path(@pet), class: "inline-flex items-center text-sm font-medium text-gray-600 hover:text-gray-900" do %>
          <span class="mr-2">‚Üê</span> Volver a <%= @pet.name %>
        <% end %>
      </div>
    <% else %>
      <div class="mt-6">
        <%= link_to documents_path, class: "inline-flex items-center text-sm font-medium text-gray-600 hover:text-gray-900" do %>
          <span class="mr-2">‚Üê</span> Volver a documentos
        <% end %>
      </div>
    <% end %>
  </div>
</div>
