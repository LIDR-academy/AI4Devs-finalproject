<div class="px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="sm:flex sm:items-center sm:justify-between mb-8 animate-fade-in">
      <div>
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">Detalles de la Cita üìÖ</h1>
        <p class="mt-2 text-sm text-gray-600">
          Informaci√≥n completa de tu cita veterinaria
        </p>
      </div>
      <%= link_to owner_appointments_path, 
          class: "mt-4 sm:mt-0 inline-flex items-center rounded-lg bg-white px-4 py-2.5 text-sm font-semibold text-gray-700 shadow-sm ring-1 ring-gray-300 hover:bg-gray-50 transition-colors min-h-[44px]" do %>
        <span class="mr-2" aria-hidden="true">‚Üê</span> Volver a Citas
      <% end %>
    </div>

    <div class="space-y-6 animate-fade-in">
      <!-- Appointment Info Card -->
      <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl overflow-hidden">
        <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
          <h2 class="text-lg font-semibold text-gray-900">üìã Informaci√≥n de la Cita</h2>
        </div>
        <div class="px-6 py-5">
          <dl class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
              <dt class="text-sm font-medium text-gray-500">Mascota</dt>
              <dd class="mt-1 text-sm font-semibold text-gray-900">
                <%= link_to @appointment.pet.name, owner_pet_path(@appointment.pet), 
                    class: "text-indigo-600 hover:text-indigo-500" %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Fecha y Hora</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @appointment.appointment_date.strftime('%d/%m/%Y a las %H:%M') %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Duraci√≥n</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @appointment.duration_minutes %> minutos</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Estado</dt>
              <dd class="mt-1">
                <span class="inline-flex items-center rounded-full status-<%= @appointment.status %> px-2.5 py-0.5 text-xs font-medium">
                  <%= @appointment.status.humanize %>
                </span>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Veterinarian & Clinic Info Card -->
      <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl overflow-hidden">
        <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
          <h2 class="text-lg font-semibold text-gray-900">üë®‚Äç‚öïÔ∏è Informaci√≥n del Veterinario y Cl√≠nica</h2>
        </div>
        <div class="px-6 py-5">
          <dl class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
              <dt class="text-sm font-medium text-gray-500">Veterinario</dt>
              <dd class="mt-1 text-sm text-gray-900">Dr. <%= @appointment.veterinarian.full_name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Cl√≠nica</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= link_to @appointment.clinic.name, clinic_path(@appointment.clinic), 
                    class: "text-indigo-600 hover:text-indigo-500" %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Direcci√≥n</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @appointment.clinic.address %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Tel√©fono</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <a href="tel:<%= @appointment.clinic.phone %>" class="text-indigo-600 hover:text-indigo-500">
                  <%= @appointment.clinic.phone %>
                </a>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Reason & Notes Card -->
      <% if @appointment.reason.present? || @appointment.notes.present? %>
        <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl overflow-hidden">
          <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
            <h2 class="text-lg font-semibold text-gray-900">üìù Detalles Adicionales</h2>
          </div>
          <div class="px-6 py-5 space-y-4">
            <% if @appointment.reason.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500 mb-2">Motivo de la Cita</dt>
                <dd class="text-sm text-gray-900"><%= simple_format(@appointment.reason) %></dd>
              </div>
            <% end %>
            <% if @appointment.notes.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500 mb-2">Notas</dt>
                <dd class="text-sm text-gray-900"><%= simple_format(@appointment.notes) %></dd>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Cancellation Info -->
      <% if @appointment.cancellation_reason.present? %>
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-lg" role="alert">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-yellow-800">Cita Cancelada</h3>
              <p class="mt-1 text-sm text-yellow-700"><%= @appointment.cancellation_reason %></p>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Actions -->
      <div class="flex flex-col sm:flex-row gap-4">
        <% if @appointment.can_be_cancelled? %>
          <%= button_to cancel_appointment_path(@appointment), 
              method: :post,
              data: { turbo: false, confirm: '¬øEst√°s seguro de que deseas cancelar esta cita?' },
              class: "flex-1 bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors min-h-[44px]" do %>
            Cancelar Cita
          <% end %>
        <% end %>
        <%= link_to owner_appointments_path, 
            class: "flex-1 text-center bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-3 px-6 rounded-lg transition-colors min-h-[44px] flex items-center justify-center" do %>
          Volver a Citas
        <% end %>
      </div>
    </div>
  </div>
</div>
