<div class="px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="sm:flex sm:items-center sm:justify-between animate-fade-in">
    <div>
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">Registros M√©dicos üìã</h1>
      <p class="mt-2 text-sm text-gray-600">
        Historial m√©dico completo del sistema
      </p>
    </div>
    <% if policy(MedicalRecord).create? %>
      <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
        <%= link_to new_medical_record_path(pet_id: params[:pet_id]), 
            class: "inline-flex items-center rounded-lg bg-indigo-600 hover:bg-indigo-700 px-4 py-2.5 text-sm font-semibold text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors min-h-[44px]" do %>
          <span class="mr-2" aria-hidden="true">‚ûï</span> Nuevo Registro
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Medical Records Table -->
  <% if @medical_records.any? %>
    <div class="mt-8 bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl overflow-hidden animate-fade-in">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mascota</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Veterinario</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipo</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Diagn√≥stico</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @medical_records.each do |record| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= record.visit_date.strftime('%d/%m/%Y') %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <div class="h-10 w-10 rounded-full bg-gradient-to-br from-indigo-400 to-purple-400 flex items-center justify-center text-lg">
                        <span aria-hidden="true">üêæ</span>
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900"><%= record.pet.name %></div>
                      <div class="text-sm text-gray-500"><%= record.pet.species.humanize %></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  Dr. <%= record.veterinarian.last_name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center rounded-full bg-indigo-100 px-2.5 py-0.5 text-xs font-medium text-indigo-800">
                    <%= record.record_type&.humanize || 'General' %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <%= truncate(record.diagnosis, length: 50) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to medical_record_path(record), 
                      class: "text-indigo-600 hover:text-indigo-900 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded px-2 py-1",
                      aria: { label: "Ver detalles del registro m√©dico" } do %>
                    Ver ‚Üí
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <!-- Empty State -->
    <%= render 'shared/empty_state', 
        icon: 'üìã',
        title: 'No hay registros m√©dicos',
        message: params[:pet_id].present? ? 'Esta mascota no tiene registros m√©dicos a√∫n.' : 'No hay registros m√©dicos en el sistema.',
        action: policy(MedicalRecord).create? ? { text: 'Crear Primer Registro', path: new_medical_record_path(pet_id: params[:pet_id]), icon: '‚ûï' } : nil %>
  <% end %>
</div>
