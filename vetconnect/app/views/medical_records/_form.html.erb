<% if pet.present? %>
  <%= form_with(model: [pet, medical_record], local: true, class: "space-y-6") do |f| %>
<% else %>
  <%= form_with(model: medical_record, local: true, class: "space-y-6") do |f| %>
    <!-- Pet Selection -->
    <div>
      <%= f.label :pet_id, "Mascota", class: "block text-sm font-medium text-gray-700 mb-2" do %>
        Mascota <span class="text-red-500" aria-label="requerido">*</span>
      <% end %>
      <%= f.collection_select :pet_id, 
          @pets || Pet.active.includes(:user), 
          :id, 
          :name, 
          { prompt: "Seleccionar mascota" }, 
          { class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all min-h-[44px]",
            required: true,
            aria: { required: true } } %>
    </div>
<% end %>
  <% if medical_record.errors.any? %>
    <div class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded-lg" role="alert" aria-live="polite">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(medical_record.errors.count, "error") %> impidieron guardar este registro:
          </h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% medical_record.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Visit Date -->
    <div>
      <%= f.label :visit_date, "Fecha de Visita", class: "block text-sm font-medium text-gray-700 mb-2" do %>
        Fecha de Visita <span class="text-red-500" aria-label="requerido">*</span>
      <% end %>
      <%= f.date_field :visit_date, 
          class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all",
          value: medical_record.visit_date || Date.today,
          required: true,
          aria: { required: true } %>
    </div>

    <!-- Record Type -->
    <div>
      <%= f.label :record_type, "Tipo de Registro", class: "block text-sm font-medium text-gray-700 mb-2" do %>
        Tipo de Registro <span class="text-red-500" aria-label="requerido">*</span>
      <% end %>
      <%= f.select :record_type, 
          options_for_select([
            ['Consulta', 'consultation'],
            ['Vacunación', 'vaccination'],
            ['Cirugía', 'surgery'],
            ['Dental', 'dental'],
            ['Emergencia', 'emergency'],
            ['Otro', 'other']
          ], medical_record.record_type), 
          { prompt: "Seleccionar tipo" }, 
          { class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all min-h-[44px]",
            required: true,
            aria: { required: true } } %>
    </div>

    <!-- Weight -->
    <div>
      <%= f.label :weight, "Peso (kg)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.number_field :weight, 
          step: 0.1,
          class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all",
          placeholder: "Ej: 5.5",
          aria: { describedby: "weight-help" } %>
      <p id="weight-help" class="mt-1 text-xs text-gray-500">Opcional</p>
    </div>

    <!-- Temperature -->
    <div>
      <%= f.label :temperature, "Temperatura (°C)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.number_field :temperature, 
          step: 0.1,
          class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all",
          placeholder: "Ej: 38.5",
          aria: { describedby: "temperature-help" } %>
      <p id="temperature-help" class="mt-1 text-xs text-gray-500">Opcional</p>
    </div>
  </div>

  <!-- Diagnosis -->
  <div>
    <%= f.label :diagnosis, "Diagnóstico", class: "block text-sm font-medium text-gray-700 mb-2" do %>
      Diagnóstico <span class="text-red-500" aria-label="requerido">*</span>
    <% end %>
    <%= f.text_area :diagnosis, 
        rows: 4,
        class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all resize-y",
        placeholder: "Describe el diagnóstico...",
        required: true,
        aria: { required: true } %>
  </div>

  <!-- Treatment -->
  <div>
    <%= f.label :treatment, "Tratamiento", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :treatment, 
        rows: 3,
        class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all resize-y",
        placeholder: "Describe el tratamiento aplicado..." %>
  </div>

  <!-- Prescription -->
  <div>
    <%= f.label :prescription, "Prescripción", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :prescription, 
        rows: 2,
        class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all resize-y",
        placeholder: "Medicamentos recetados..." %>
  </div>

  <!-- Notes -->
  <div>
    <%= f.label :notes, "Notas Adicionales", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :notes, 
        rows: 3,
        class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all resize-y",
        placeholder: "Notas adicionales sobre la consulta..." %>
  </div>

  <!-- Actions -->
  <div class="flex flex-col sm:flex-row gap-4 pt-4">
    <%= f.submit medical_record.persisted? ? "Actualizar Registro" : "Crear Registro Médico", 
        class: "flex-1 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-6 rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors min-h-[44px]",
        aria: { label: medical_record.persisted? ? "Actualizar registro médico" : "Crear nuevo registro médico" } %>
    <%= link_to "Cancelar", medical_record.persisted? ? medical_record_path(medical_record) : (pet.present? ? pet_path(pet) : medical_records_path), 
        class: "flex-1 text-center bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-3 px-6 rounded-lg transition-colors min-h-[44px] flex items-center justify-center" %>
  </div>
<% end %>
