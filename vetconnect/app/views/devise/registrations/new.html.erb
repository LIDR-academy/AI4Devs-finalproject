<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-purple-50 via-pink-50 to-blue-50">
  <div class="max-w-md w-full space-y-8 animate-fade-in">
    <!-- Logo and Header -->
    <div class="text-center">
      <div class="flex justify-center">
        <div class="rounded-full gradient-bg p-4 shadow-lg">
          <span class="text-5xl">üêæ</span>
        </div>
      </div>
      <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
        Crear Cuenta
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        √önete a VetConnect y comienza a gestionar la salud de tus mascotas
      </p>
    </div>

    <!-- Register Form -->
    <div class="mt-8 bg-white shadow-2xl rounded-2xl overflow-hidden ring-1 ring-gray-900/5">
      <div class="px-8 pt-8 pb-6">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <!-- First Name -->
          <div>
            <%= f.label :first_name, "Nombre *", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.text_field :first_name,
                  autofocus: true,
                  class: "appearance-none block w-full px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all",
                  placeholder: "Juan",
                  required: true %>
            </div>
          </div>

          <!-- Last Name -->
          <div>
            <%= f.label :last_name, "Apellido *", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.text_field :last_name,
                  class: "appearance-none block w-full px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all",
                  placeholder: "P√©rez",
                  required: true %>
            </div>
          </div>

          <!-- Email -->
          <div>
            <%= f.label :email, "Correo Electr√≥nico *", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.email_field :email,
                  autocomplete: "email",
                  class: "appearance-none block w-full px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all",
                  placeholder: "nombre@ejemplo.com",
                  required: true %>
            </div>
          </div>

          <!-- Phone -->
          <div>
            <%= f.label :phone, "Tel√©fono *", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.telephone_field :phone,
                  class: "appearance-none block w-full px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all",
                  placeholder: "+1234567890",
                  required: true %>
            </div>
          </div>

          <!-- Password -->
          <div>
            <%= f.label :password, "Contrase√±a *", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.password_field :password,
                  autocomplete: "new-password",
                  class: "appearance-none block w-full px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all",
                  placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢",
                  required: true %>
            </div>
            <% if @minimum_password_length %>
              <p class="mt-1 text-xs text-gray-500">M√≠nimo <%= @minimum_password_length %> caracteres</p>
            <% end %>
          </div>

          <!-- Password Confirmation -->
          <div>
            <%= f.label :password_confirmation, "Confirmar Contrase√±a *", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.password_field :password_confirmation,
                  autocomplete: "new-password",
                  class: "appearance-none block w-full px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all",
                  placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢",
                  required: true %>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="pt-2">
            <%= f.submit "Crear Cuenta",
                class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-semibold text-white gradient-bg hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all cursor-pointer" %>
          </div>
        <% end %>
      </div>

      <!-- Links -->
      <div class="px-8 py-4 bg-gray-50 border-t border-gray-200">
        <div class="text-sm space-y-2">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

    <!-- Info -->
    <div class="rounded-lg bg-green-50 p-4 shadow-sm ring-1 ring-green-100">
      <div class="flex">
        <span class="text-xl mr-2">‚ú®</span>
        <div class="text-xs text-green-700">
          <p class="font-semibold mb-1">Al crear tu cuenta podr√°s:</p>
          <ul class="list-disc list-inside space-y-1">
            <li>Registrar tus mascotas</li>
            <li>Agendar citas veterinarias</li>
            <li>Acceder al historial m√©dico</li>
            <li>Recibir recordatorios autom√°ticos</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
