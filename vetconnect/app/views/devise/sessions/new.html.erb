          <!-- Submit Button -->
          <div class="pt-2">
            <%= f.submit "Iniciar Sesi√≥n", 
                class: "btn btn-primary btn-block" %>
          </div>
        <% end %>

        <!-- Demo Credentials - Collapsible -->
