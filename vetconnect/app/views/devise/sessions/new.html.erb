            <div class="flex items-center">
              <span class="mr-2">‚úÖ</span>
              <span><%= notice %></span>
            </div>
          </div>
        <% end %>
        
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
          <!-- Email -->
          <div class="form-group">
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" do %>
              Correo Electr√≥nico
            <% end %>
            <div class="mt-1">
              <%= f.email_field :email, 
                  autofocus: true, 
                  autocomplete: "email",
                  class: "form-control",
                  placeholder: "tu@email.com",
                  required: true,
                  aria: { required: true } %>
            </div>
          </div>

          <!-- Password -->
          <div class="form-group">
            <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" do %>
              Contrase√±a
            <% end %>
            <div class="mt-1">
              <%= f.password_field :password, 
                  autocomplete: "current-password",
                  required: true,
                  value: "",
                  class: "form-control",
                  placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢",
                  aria: { required: true } %>
            </div>
            <% if resource.errors[:password].any? %>
              <p class="mt-1 text-sm text-red-600"><%= resource.errors[:password].first %></p>
            <% end %>
          </div>

          <!-- Remember Me & Forgot Password -->
          <div class="flex items-center justify-between">
            <% if devise_mapping.rememberable? %>
              <div class="form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Recordarme", class: "form-check-label" %>
              </div>
            <% end %>
            <div class="text-sm">
              <%= link_to new_user_password_path, class: "btn-link" do %>
                ¬øOlvidaste tu contrase√±a?
