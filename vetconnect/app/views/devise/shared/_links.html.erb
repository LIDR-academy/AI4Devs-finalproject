<div class="flex flex-col space-y-2">
  <%- if controller_name != 'sessions' %>
    <div class="text-center">
      <%= link_to "Ya tengo cuenta", new_session_path(resource_name), class: "font-medium text-purple-600 hover:text-purple-500 transition-colors" %>
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="text-center">
      <%= link_to "Crear nueva cuenta", new_registration_path(resource_name), class: "font-medium text-purple-600 hover:text-purple-500 transition-colors" %>
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="text-center">
      <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "font-medium text-gray-600 hover:text-gray-500 transition-colors" %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="text-center">
      <%= link_to "No recibí instrucciones de confirmación", new_confirmation_path(resource_name), class: "font-medium text-gray-600 hover:text-gray-500 transition-colors" %>
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="text-center">
      <%= link_to "No recibí instrucciones de desbloqueo", new_unlock_path(resource_name), class: "font-medium text-gray-600 hover:text-gray-500 transition-colors" %>
    </div>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <div class="text-center">
        <%= button_to "Iniciar sesión con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "font-medium text-gray-600 hover:text-gray-500 transition-colors" %>
      </div>
    <% end %>
  <% end %>
</div>
