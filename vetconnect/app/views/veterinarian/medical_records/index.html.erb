    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= link_to new_veterinarian_medical_record_path, class: "inline-flex items-center rounded-lg bg-indigo-600 hover:bg-indigo-700 px-4 py-2.5 text-sm font-semibold text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors min-h-[44px]" do %>
