  <!-- Medical Records List -->
  <% if @medical_records.any? %>
    <div class="mt-8 bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl overflow-hidden animate-fade-in">
      <div class="divide-y divide-gray-200">
        <% @medical_records.each do |record| %>
          <div class="p-6 hover:bg-gray-50 transition-colors">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-x-4 flex-1">
                <div class="flex-shrink-0">
                  <div class="h-16 w-16 rounded-lg bg-indigo-100 flex flex-col items-center justify-center">
                    <span class="text-xs font-semibold text-indigo-600"><%= record.visit_date.strftime('%b').upcase %></span>
                    <span class="text-xl font-bold text-indigo-700"><%= record.visit_date.day %></span>
                  </div>
                </div>
                <div class="min-w-0 flex-auto">
                  <div class="flex items-center gap-2 mb-1">
                    <p class="text-sm font-semibold text-gray-900">
                      <%= record.pet.name %>
                    </p>
                    <span class="inline-flex items-center rounded-full bg-indigo-100 px-2 py-0.5 text-xs font-medium text-indigo-800">
                      <%= record.record_type.humanize %>
                    </span>
                  </div>
                  <p class="text-sm text-gray-500">
                    <%= record.visit_date.strftime('%d/%m/%Y') %> â€¢ <%= record.pet.species.humanize %>
                  </p>
                  <% if record.diagnosis.present? %>
                    <p class="mt-1 text-sm text-gray-700"><%= truncate(record.diagnosis, length: 80) %></p>
                  <% end %>
                  <% if record.veterinarian.present? %>
                    <p class="mt-1 text-xs text-gray-400">Dr. <%= record.veterinarian.full_name %></p>
                  <% end %>
                </div>
              </div>
              <div class="ml-4">
                <%= link_to veterinarian_medical_record_path(record), 
                    class: "text-sm font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded px-2 py-1 min-h-[44px] flex items-center",
                    aria: { label: "Ver detalles del registro mÃ©dico" } do %>
