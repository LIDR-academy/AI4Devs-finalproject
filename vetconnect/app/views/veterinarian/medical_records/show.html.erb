      <% end %>

      <!-- Actions -->
      <div class="flex flex-col sm:flex-row gap-4">
        <%= link_to edit_veterinarian_medical_record_path(@medical_record), 
            class: "flex-1 text-center bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors min-h-[44px] flex items-center justify-center" do %>
          âœï¸ Editar Registro
