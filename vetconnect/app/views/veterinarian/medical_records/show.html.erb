            <h2 class="text-lg font-semibold text-gray-900">ğŸ’Š Tratamiento</h2>
          </div>
          <div class="px-6 py-5">
            <p class="text-sm text-gray-900 whitespace-pre-wrap"><%= @medical_record.treatment %></p>
          </div>
        </div>
      <% end %>

      <!-- Prescription Card -->
      <% if @medical_record.prescription.present? %>
        <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl overflow-hidden">
