<div class="px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="sm:flex sm:items-center sm:justify-between animate-fade-in">
    <div>
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">Mis Citas ðŸ“…</h1>
      <p class="mt-2 text-sm text-gray-600">
        Gestiona todas tus citas asignadas
      </p>
    </div>
  </div>

  <!-- Filters -->
  <div class="mt-6 flex flex-wrap gap-2 animate-fade-in">
    <%= link_to veterinarian_appointments_path, class: "inline-flex items-center rounded-full px-4 py-2 text-sm font-medium #{params[:status].blank? ? 'bg-indigo-100 text-indigo-800' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'} transition-colors min-h-[44px]" do %>
      Todas
    <% end %>
    <%= link_to veterinarian_appointments_path(status: :scheduled), class: "inline-flex items-center rounded-full px-4 py-2 text-sm font-medium #{params[:status] == 'scheduled' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'} transition-colors min-h-[44px]" do %>
      Programadas
    <% end %>
    <%= link_to veterinarian_appointments_path(status: :confirmed), class: "inline-flex items-center rounded-full px-4 py-2 text-sm font-medium #{params[:status] == 'confirmed' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'} transition-colors min-h-[44px]" do %>
      Confirmadas
    <% end %>
    <%= link_to veterinarian_appointments_path(status: :completed), class: "inline-flex items-center rounded-full px-4 py-2 text-sm font-medium #{params[:status] == 'completed' ? 'bg-gray-100 text-gray-800' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'} transition-colors min-h-[44px]" do %>
      Completadas
    <% end %>
  </div>

  <!-- Appointments List -->
  <% if @appointments.any? %>
    <div class="mt-8 bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl overflow-hidden animate-fade-in">
      <div class="divide-y divide-gray-200">
        <% @appointments.each do |appointment| %>
          <div class="p-6 hover:bg-gray-50 transition-colors">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-x-4 flex-1">
                <div class="flex-shrink-0">
                  <div class="h-16 w-16 rounded-lg <%= appointment.appointment_date >= Time.current ? 'bg-blue-100' : 'bg-gray-100' %> flex flex-col items-center justify-center">
                    <span class="text-xs font-semibold <%= appointment.appointment_date >= Time.current ? 'text-blue-600' : 'text-gray-600' %>"><%= appointment.appointment_date.strftime('%b').upcase %></span>
                    <span class="text-xl font-bold <%= appointment.appointment_date >= Time.current ? 'text-blue-700' : 'text-gray-700' %>"><%= appointment.appointment_date.day %></span>
                  </div>
                </div>
                <div class="min-w-0 flex-auto">
                  <p class="text-sm font-semibold text-gray-900">
                    <%= appointment.pet.name %> 
                    <span class="text-gray-500 text-xs">(<%= appointment.pet.species.humanize %>)</span>
                  </p>
                  <p class="mt-1 text-sm text-gray-500">
                    <%= appointment.appointment_date.strftime('%H:%M') %> â€¢ <%= appointment.owner.full_name %>
                  </p>
                  <p class="mt-1 text-sm text-gray-500"><%= appointment.clinic.name %></p>
                  <p class="mt-1 text-xs text-gray-400"><%= truncate(appointment.reason, length: 50) %></p>
                </div>
              </div>
              <div class="flex items-center gap-x-3">
                <span class="inline-flex items-center rounded-full status-<%= appointment.status %> px-2.5 py-0.5 text-xs font-medium">
                  <%= appointment.status.humanize %>
                </span>
                <div class="flex gap-2">
                  <%= link_to veterinarian_appointment_path(appointment), 
                      class: "text-sm font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded px-2 py-1 min-h-[44px] flex items-center",
                      aria: { label: "Ver detalles de la cita" } do %>
                    Ver â†’
                  <% end %>
                  <% if appointment.status_scheduled? || appointment.status_confirmed? %>
                    <%= button_to complete_appointment_path(appointment), 
                        method: :post,
                        data: { turbo: false, confirm: 'Â¿Marcar esta cita como completada?' },
                        class: "text-sm font-medium text-green-600 hover:text-green-500 focus:outline-none focus:ring-2 focus:ring-green-500 rounded px-2 py-1 min-h-[44px] flex items-center",
                        aria: { label: "Completar cita" } do %>
                      âœ“ Completar
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- Empty State -->
    <%= render 'shared/empty_state', 
        icon: 'ðŸ“…',
        title: 'No tienes citas asignadas',
        message: params[:status].present? ? 'No hay citas con el estado seleccionado.' : 'AÃºn no tienes citas asignadas.' %>
  <% end %>
</div>
