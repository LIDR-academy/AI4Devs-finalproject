<%= form_with(model: clinic, local: true, class: "space-y-6") do |form| %>
  <% if clinic.errors.any? %>
    <div class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded-lg" role="alert" aria-live="polite">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(clinic.errors.count, "error") %> impidieron guardar esta clínica:
          </h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% clinic.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Name -->
  <div>
    <%= form.label :name, "Nombre de la Clínica", class: "block text-sm font-medium text-gray-700 mb-2" do %>
      Nombre <span class="text-red-500" aria-label="requerido">*</span>
    <% end %>
    <%= form.text_field :name, 
        class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all",
        placeholder: "Ej: VetConnect Central",
        required: true,
        aria: { required: true } %>
  </div>

  <!-- Address -->
  <div>
    <%= form.label :address, "Dirección", class: "block text-sm font-medium text-gray-700 mb-2" do %>
      Dirección <span class="text-red-500" aria-label="requerido">*</span>
    <% end %>
    <%= form.text_area :address, 
        rows: 3,
        class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all resize-y",
        placeholder: "Ej: 123 Main Street, Ciudad",
        required: true,
        aria: { required: true } %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- Phone -->
    <div>
      <%= form.label :phone, "Teléfono", class: "block text-sm font-medium text-gray-700 mb-2" do %>
        Teléfono <span class="text-red-500" aria-label="requerido">*</span>
      <% end %>
      <%= form.telephone_field :phone, 
          class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all",
          placeholder: "+1234567890",
          required: true,
          aria: { required: true } %>
    </div>

    <!-- Email -->
    <div>
      <%= form.label :email, "Correo Electrónico", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.email_field :email, 
          class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all",
          placeholder: "clinica@example.com",
          aria: { describedby: "email-help" } %>
      <p id="email-help" class="mt-1 text-xs text-gray-500">Opcional</p>
    </div>
  </div>

  <!-- Active Status -->
  <div class="flex items-center">
    <%= form.check_box :active, 
        class: "h-5 w-5 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded focus:ring-2",
        checked: clinic.new_record? ? true : clinic.active %>
    <%= form.label :active, "Clínica activa", class: "ml-2 block text-sm text-gray-700" %>
  </div>

  <!-- Operating Hours -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-2">Horarios de Atención</label>
    <p class="text-xs text-gray-500 mb-4">Los horarios se configuran después de crear la clínica</p>
    <div class="bg-gray-50 border-2 border-dashed border-gray-300 rounded-lg p-4 text-center">
      <p class="text-sm text-gray-600">Los horarios se pueden configurar desde la página de edición</p>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex flex-col sm:flex-row gap-4 pt-4">
    <%= form.submit clinic.persisted? ? "Actualizar Clínica" : "Crear Clínica", 
        class: "flex-1 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-6 rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors min-h-[44px]",
        aria: { label: clinic.persisted? ? "Actualizar información de la clínica" : "Crear nueva clínica" } %>
    <%= link_to "Cancelar", clinic.persisted? ? clinic_path(clinic) : clinics_path, 
        class: "flex-1 text-center bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-3 px-6 rounded-lg transition-colors min-h-[44px] flex items-center justify-center" %>
  </div>
<% end %>
