            <h2 class="text-base font-semibold text-gray-900">üïê Horarios de Atenci√≥n</h2>
          </div>
          <div class="px-6 py-5">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <% days = {
                monday: 'Lunes',
                tuesday: 'Martes',
                wednesday: 'Mi√©rcoles',
                thursday: 'Jueves',
                friday: 'Viernes',
                saturday: 'S√°bado',
