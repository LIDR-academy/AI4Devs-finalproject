              } %>
              <% days.each do |day_key, day_name| %>
                <% date_for_day = Date.today.beginning_of_week + (days.keys.index(day_key)).days %>
                <% hours = @clinic.operating_hours_for(date_for_day) %>
                <div class="flex items-center justify-between py-2 px-3 rounded-lg <%= @clinic.open_on?(date_for_day) ? 'bg-green-50' : 'bg-gray-50' %>">
