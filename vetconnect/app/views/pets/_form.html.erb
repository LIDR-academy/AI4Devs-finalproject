<%= form_with(model: pet, local: true, class: "bg-white rounded-lg shadow-md p-6") do |form| %>
  <% if pet.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(pet.errors.count, "error") %> impidieron guardar esta mascota:
          </h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% pet.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <!-- Nombre -->
    <div>
      <%= form.label :name, "Nombre *", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "Ej: Max" %>
    </div>

    <!-- Especie -->
    <div>
      <%= form.label :species, "Especie *", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :species, 
          options_for_select(Pet.species.keys.map { |s| [s.humanize, s] }, pet.species),
          { prompt: "Selecciona una especie" },
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Raza -->
    <div>
      <%= form.label :breed, "Raza", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :breed, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "Ej: Golden Retriever" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <!-- Fecha de Nacimiento -->
      <div>
        <%= form.label :birth_date, "Fecha de Nacimiento *", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.date_field :birth_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Género -->
      <div>
        <%= form.label :gender, "Género *", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :gender,
            options_for_select(Pet.genders.keys.map { |g| [g.humanize, g] }, pet.gender),
            { prompt: "Selecciona" },
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <!-- Color -->
      <div>
        <%= form.label :color, "Color", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :color, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "Ej: Dorado" %>
      </div>

      <!-- Peso -->
      <div>
        <%= form.label :weight, "Peso (kg)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.number_field :weight, step: 0.01, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "Ej: 25.5" %>
      </div>
    </div>

    <!-- Microchip -->
    <div>
      <%= form.label :microchip_number, "Número de Microchip", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :microchip_number, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "Ej: ABC123456789" %>
      <p class="mt-1 text-sm text-gray-500">Número único de identificación si la mascota tiene microchip</p>
    </div>

    <!-- Notas Especiales -->
    <div>
      <%= form.label :special_notes, "Notas Especiales", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :special_notes, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "Alergias, comportamiento especial, necesidades médicas, etc." %>
    </div>

    <!-- Foto -->
    <div>
      <%= form.label :photo, "Foto", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.file_field :photo, accept: "image/png,image/jpeg,image/jpg", class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
      <p class="mt-1 text-sm text-gray-500">Formatos aceptados: JPEG, PNG (máx. 5MB)</p>
      <% if pet.photo.attached? %>
        <div class="mt-2">
          <%= image_tag pet.photo, class: "h-32 w-32 object-cover rounded-lg" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-8 flex gap-4">
    <%= form.submit pet.persisted? ? "Actualizar Mascota" : "Registrar Mascota", 
        class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded focus:outline-none focus:shadow-outline" %>
    <%= link_to "Cancelar", pet.persisted? ? pet_path(pet) : pets_path, 
        class: "flex-1 text-center bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-3 px-4 rounded" %>
  </div>

  <p class="mt-4 text-sm text-gray-500">* Campos obligatorios</p>
<% end %>
