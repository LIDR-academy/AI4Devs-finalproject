<div class="container mt-4">
  <h1>Editar Usuario</h1>

  <%= form_with(model: @user, url: admin_user_path(@user), local: true) do |f| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@user.errors.count, "error") %> impidieron actualizar el usuario:</h4>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :first_name, "Nombre", class: "form-label" %>
              <%= f.text_field :first_name, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :last_name, "Apellido", class: "form-label" %>
              <%= f.text_field :last_name, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :phone, "Teléfono", class: "form-label" %>
              <%= f.text_field :phone, class: "form-control" %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :role, "Rol", class: "form-label" %>
              <%= f.select :role, 
                  User.roles.keys.map { |role| [role.humanize, role] }, 
                  {}, 
                  class: "form-control", 
                  required: true %>
            </div>

            <hr>
            <h6>Cambiar Contraseña (opcional)</h6>
            <small class="text-muted">Deja en blanco si no quieres cambiar la contraseña</small>

            <div class="mb-3 mt-3">
              <%= f.label :password, "Nueva Contraseña", class: "form-label" %>
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Confirmar Nueva Contraseña", class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-3">
      <%= f.submit "Actualizar Usuario", class: "btn btn-primary" %>
      <%= link_to "Cancelar", admin_user_path(@user), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
