# Django Settings
SECRET_KEY=change-me-to-a-secure-random-key-in-production
DEBUG=True
DJANGO_SETTINGS_MODULE=gamy.settings.local

# Site Configuration
TIME_ZONE=America/Bogota
LANGUAGE_CODE=es
LANGUAGES=es,fr,en

# Hosts/CSRF (producción)
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Database Configuration
# PostgreSQL 15.13 está instalado y funcionando en localhost:5432
# Usuario: postgres
# Contraseña: N0v4t13rr4 (configurada)
DB_NAME=gamy
DB_USER=postgres
DB_PASSWORD=N0v4t13rr4
DB_HOST=localhost
DB_PORT=5432
# Alternativa usando DATABASE_URL (formato: postgres://usuario:contraseña@host:puerto/nombre_bd)
# DATABASE_URL=postgres://postgres:N0v4t13rr4@localhost:5432/gamy

# Static Files
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media
STATIC_URL=/static/
MEDIA_URL=/media/

# Email Configuration (opcional para desarrollo)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-password

# Google OAuth Configuration (django-allauth)
# Obtener credenciales en: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

