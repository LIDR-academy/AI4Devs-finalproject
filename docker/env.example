# ============================================
# SIGQ - Sistema Integrado de Gestión Quirúrgica
# Variables de Entorno para Docker Compose
# ============================================

# PostgreSQL
POSTGRES_DB=sigq_db
POSTGRES_USER=sigq_user
POSTGRES_PASSWORD=CHANGE_THIS_IN_PRODUCTION
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO (S3-compatible Object Storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_THIS_IN_PRODUCTION
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_BUCKET_IMAGES=imagenes-medicas
MINIO_BUCKET_DOCUMENTS=documentos
MINIO_BUCKET_PHOTOS=fotos-pre-postop

# Keycloak
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=sistema-quirurgico
KEYCLOAK_CLIENT_ID=backend-api
KEYCLOAK_CLIENT_SECRET=CHANGE_THIS_IN_PRODUCTION
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_THIS_IN_PRODUCTION

# Orthanc (DICOM Server)
ORTHANC_URL=http://orthanc:8042
ORTHANC_USERNAME=orthanc
ORTHANC_PASSWORD=CHANGE_THIS_IN_PRODUCTION

# Backend API
NODE_ENV=development
API_PORT=3000
API_URL=http://localhost:3000
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_SECRET
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Frontend
FRONTEND_URL=http://localhost:5173
VITE_API_URL=http://localhost:3000/api

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Seguridad
ENCRYPTION_KEY=CHANGE_THIS_IN_PRODUCTION_32_CHAR_KEY
BCRYPT_ROUNDS=10

# Integraciones Externas (Opcional)
# HL7 FHIR
FHIR_SERVER_URL=
FHIR_CLIENT_ID=
FHIR_CLIENT_SECRET=

# PACS
PACS_URL=
PACS_USERNAME=
PACS_PASSWORD=

# Farmacia
PHARMACY_API_URL=
PHARMACY_API_KEY=
