# ============================================
# SIGQ - Sistema Integrado de Gestión Quirúrgica
# Variables de Entorno para PRODUCCIÓN
# ============================================
# ⚠️ IMPORTANTE: Cambiar TODAS las contraseñas y secretos antes de usar en producción
# ⚠️ Este archivo contiene valores de ejemplo. NUNCA usar estos valores en producción.

# PostgreSQL
POSTGRES_DB=sigq_db
POSTGRES_USER=sigq_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_MIN_32_CHARS
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_STRONG_REDIS_PASSWORD

# MinIO (S3-compatible Object Storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_THIS_STRONG_MINIO_PASSWORD
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_USE_SSL=false
MINIO_BUCKET_IMAGES=imagenes-medicas
MINIO_BUCKET_DOCUMENTS=documentos
MINIO_BUCKET_PHOTOS=fotos-pre-postop

# Keycloak
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=sistema-quirurgico
KEYCLOAK_CLIENT_ID=backend-api
KEYCLOAK_CLIENT_SECRET=CHANGE_THIS_STRONG_CLIENT_SECRET
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_THIS_STRONG_ADMIN_PASSWORD
KEYCLOAK_HOSTNAME_STRICT=false
KEYCLOAK_HTTP_ENABLED=true
KEYCLOAK_HTTPS_ENABLED=false

# Backend API
NODE_ENV=production
API_PORT=3000
API_URL=http://localhost:3000
JWT_SECRET=CHANGE_THIS_USE_STRONG_SECRET_MIN_32_CHARS_RANDOM_STRING
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Database Configuration
# ⚠️ IMPORTANTE: En producción SIEMPRE usar migraciones, nunca synchronize
DB_SYNCHRONIZE=false
DB_MIGRATIONS_RUN=true

# Frontend
FRONTEND_URL=http://localhost:5173
VITE_API_URL=http://localhost:3000/api

# CORS - Configurar con los dominios reales de producción
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_STRONG_GRAFANA_PASSWORD
GRAFANA_SECRET_KEY=CHANGE_THIS_STRONG_GRAFANA_SECRET_KEY
GRAFANA_ROOT_URL=http://localhost:3001
LOKI_PORT=3100

# Orthanc
ORTHANC_PORT=8042
ORTHANC_URL=http://orthanc:8042
ORTHANC_USERNAME=orthanc
ORTHANC_PASSWORD=CHANGE_THIS_STRONG_ORTHANC_PASSWORD

# Seguridad
ENCRYPTION_KEY=CHANGE_THIS_32_CHAR_ENCRYPTION_KEY
BCRYPT_ROUNDS=12

# Integraciones Externas (Opcional)
# HL7 FHIR
FHIR_SERVER_URL=
FHIR_CLIENT_ID=
FHIR_CLIENT_SECRET=

# PACS
PACS_URL=
PACS_USERNAME=
PACS_PASSWORD=

# Farmacia
PHARMACY_API_URL=
PHARMACY_API_KEY=
