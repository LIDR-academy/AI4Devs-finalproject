{
  "extends": "../backend/tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "backend/*": ["../backend/src/*"],
      "frontend/*": ["../frontend/src/*"],
      "@builders/*": ["builders/*"],
      "@setup/*": ["setup/*"],
      "@jest-global-setup": ["jest-global-setup"],
      "@value-objects/*": ["../backend/src/domain/value-objects/*"],
      "@entities/*": ["../backend/src/domain/entities/*"],
      "@services/*": ["../backend/src/domain/services/*"]
    }
  },
  "include": [
    "**/*.ts",
    "../backend/src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
